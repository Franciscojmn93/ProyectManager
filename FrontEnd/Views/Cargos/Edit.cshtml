@model FrontEnd.Models.CargosViewModel

@{
    ViewData["Title"] = "Editar";
}
<h2>Editar el cargo <span style="color: orange; font-weight: bold;">@Model.NombreCargo</span></h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdCargo" class="control-label"></label>
                <input asp-for="IdCargo" class="form-control"  readonly/>
                <span asp-validation-for="IdCargo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreCargo" class="control-label"></label>
                <input asp-for="NombreCargo" class="form-control" />
                <span asp-validation-for="NombreCargo" class="text-danger"></span>
            </div>
             <br />
            <div class="d-grid gap-1 d-md-flex justify-content-md-start">
                <input type="submit" value="Guardar Cambios" class="btn btn-outline-success btn-sm" />
                <a asp-controller="Cargos" asp-action="Index" class="btn btn-outline-secondary btn-sm">Atrás</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
