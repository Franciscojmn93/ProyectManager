@model FrontEnd.Models.CargosViewModel

@{
    ViewData["Title"] = "Detalles";
}

<h2>Información del cargo <span style="color: lightblue; font-weight: bold;">@Model.NombreCargo</span></h2>

<div>
    <h4>Detalles</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdCargo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdCargo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombreCargo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreCargo)
        </dd>
    </dl>
</div>
<hr />
<div class="d-grid gap-1 d-md-flex justify-content-md-start">
    <a asp-controller="Cargos" asp-action="Edit" asp-route-id="@Model.IdCargo" class="btn btn-outline-warning btn-sm">Editar</a>
    <a asp-controller="Cargos" asp-action="Index" class="btn btn-outline-secondary btn-sm">Atrás</a>
</div>
