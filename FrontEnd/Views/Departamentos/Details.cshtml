@model FrontEnd.Models.DepartamentosViewModel

@{
    ViewData["Title"] = "Detalles";
}

<h2>Información del departamento <span style="color: lightblue; font-weight: bold;">@Model.NombreDepartamento</span></h2>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdDepartamento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdDepartamento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombreDepartamento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreDepartamento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombreResponsable)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreResponsable)
        </dd>
    </dl>
</div>
<hr />
   <div class="d-grid gap-1 d-md-flex justify-content-md-start">
    <a asp-controller="Departamentos" asp-action="Edit" asp-route-id="@Model.IdDepartamento" class="btn btn-outline-warning btn-sm">Editar</a>
       <a asp-controller="Departamentos" asp-action="Index" class="btn btn-outline-secondary btn-sm">Atrás</a>
</div>
