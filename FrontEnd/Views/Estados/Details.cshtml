@model FrontEnd.Models.EstadosViewModel

@{
    ViewData["Title"] = "Detalles";
}

<h2>Información del cargo <span style="color: lightblue; font-weight: bold;">@Model.Descripcion</span></h2>

<div>
    <h4>Detalles</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Id Estado
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdEstado)
        </dd>
        <dt class = "col-sm-2">
            Descripcion
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
    </dl>
</div>
<hr />
<div class="d-grid gap-1 d-md-flex justify-content-md-start">
    <a asp-controller="Estados" asp-action="Edit" asp-route-id="@Model.IdEstado" class="btn btn-outline-warning btn-sm">Editar</a>
    <a asp-controller="Estados" asp-action="Index" class="btn btn-outline-secondary btn-sm">Atrás</a>
</div>
